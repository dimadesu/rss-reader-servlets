<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="Your_WebApp_ID" version="2.5">
	<display-name>Archetype Created Web Application</display-name>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
		</jsp-property-group>
	</jsp-config>
	
	<filter>
		<filter-name>SessionCheckFilter</filter-name>
		<filter-class>servlets.SessionCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionCheckFilter</filter-name>
		<url-pattern>/signup</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>FeedTest</servlet-name>
		<servlet-class>servlets.Home</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FeedTest</servlet-name>
		<url-pattern>/FeedTest</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>site-home</servlet-name>
		<jsp-file>/Common/Index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>site-home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>signup</servlet-name>
		<jsp-file>/Common/Index.jsp</jsp-file>
		<init-param>
			<param-name>p</param-name>
			<param-value>SignUp</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>signin</servlet-name>
		<jsp-file>/Common/Index.jsp</jsp-file>
		<init-param>
			<param-name>p</param-name>
			<param-value>SignIn</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>signin</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>Index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
